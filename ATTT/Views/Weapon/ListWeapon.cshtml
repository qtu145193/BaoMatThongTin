@model Models.ViewModel.WeaponViewModel

@{
    ViewBag.Title = "ListWeapon";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listProduct = (List<Models.ViewModel.WeaponViewModel>)ViewBag.ListProduct;
}
<link href="~/Assets/Client/css/ListProduct.css" rel="stylesheet">
<h2>Pistols</h2>
<div class="row">
    @foreach (var item in listProduct)
    {
        if (item.IDclass == 1)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="@item.Image" />
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @item.Price$
                            </span>
                            <small class="text-muted">@item.WeaponClass</small>
                            <a href="#" class="product-name"> @item.NameWea</a>
                            <div class="m-t text-righ">
                                <a href="/Weapon/Detail/@item.IDweapon" class="btn btn-xs btn-outline btn-primary">Info<i class="fa fa-long-arrow-right"></i> </a>
                                <a href="/Weapon/ChangeDetail/@item.IDweapon" class="btn btn-danger btn-outline btn-primary">Change<i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<hr />
<h2>Heavy</h2>
<div class="row">
    @foreach (var item in listProduct)
    {
        if (item.IDclass == 2)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="@item.Image" />
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @item.Price$
                            </span>
                            <small class="text-muted">@item.WeaponClass</small>
                            <a href="#" class="product-name"> @item.NameWea</a>
                            <div class="m-t text-righ">
                                <a href="/Weapon/Detail/@item.IDweapon" class="btn btn-xs btn-outline btn-primary">Info<i class="fa fa-long-arrow-right"></i> </a>
                                <a href="/Weapon/ChangeDetail/@item.IDweapon" class="btn btn-danger btn-outline btn-primary">Change<i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

