@{
    var session = (UserLogin)Session[ATTT.Common.CommonConstant.USER_SESSION];
}


@if (session == null)
{
<ul class="nav navbar-nav">
    <li class="nav-item"><a href="/Account/Register" id="registerLink" class="nav-link">Register</a></li>
    <li class="nav-item"><a href="/Account/Login" id="loginLink" class="nav-link">Login</a></li>
</ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">
            <span class="mr-2">Xin chào: @session.Username</span>
        </a>
        <div class="dropdown-menu dropdown-menu-right shadow">
            <a class="dropdown-item" href="/Account/UserDetail/@session.userID">
                Sửa thông tin
            </a>
        </div>
    </li>
    <li class="nav-item"><a href="/Account/Logout" id="logoutLink" class="nav-link navbar-light">Logout</a></li>
</ul>
}

